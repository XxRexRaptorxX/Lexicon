      "border": false
    },
    {
      "type": "patchouli:image",
      "images": [
        "lexicon:textures/pictures/evoker_captain.png"
      ],
      "text": "$(n)Spawning:$() Raid (rare)",
      "title": "Evoker Captain",
      "border": false
    },
    {
      "type": "patchouli:image",
      "images": [
        "lexicon:textures/pictures/illusioner_captain.png"
      ],
